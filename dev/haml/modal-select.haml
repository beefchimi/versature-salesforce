					%h2.truncate admin@northernarmy.com

			%section#main_settings{"data-container" => "padding"}

				%article

					-# how this form functions is left up to the client - too many uncertainties
					%form#form_settings.settings_form{:action => "", :method => "", :name => "form_settings"}

						%h4 User Role:
						#wrap_select-role.wrap_select-role.wrap_select{"data-selected" => ""}

							%select#user_role.visuallyhidden{:name => "user_role", :tabindex => "-1", :required => true}
