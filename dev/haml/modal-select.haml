								%option{:value => "Chief Commander"} Chief Commander
								%option{:value => "Admiral"} Admiral
								%option{:value => "Captain Jim"} Captain Jim
								%option{:value => "Person of Interest"} Person of Interest

							.dropdown_toggle
								%span.dropdown_placeholder Select Role...
								.wrap_svg.input_svg
									%svg.ui_arrow-thick{:viewBox => "0 0 64 64"}
										%use{"xlink:href" => "#ui_arrow-thick"}

						%h4 User Preference:
						#wrap_select-preference.wrap_select-preference.wrap_select{"data-selected" => ""}

							%select#user_preference.visuallyhidden{:name => "user_preference", :tabindex => "-1", :required => true}
								%option{:disabled => true, :selected => true, :value => true} Select Preference...
								%option{:value => "Lead"} Lead
								%option{:value => "Account"} Account
								%option{:value => "Contact"} Contact
								%option{:value => "Opportunity"} Opportunity

							.dropdown_toggle
								%span.dropdown_placeholder.truncate Select Preference...
								.wrap_svg.input_svg
									%svg.ui_arrow-thick{:viewBox => "0 0 64 64"}
										%use{"xlink:href" => "#ui_arrow-thick"}

						%a.log_link{:href => "#", :title => "Log Out Current User"} Log Out Current User

